        margin-bottom: 20px; /* Espacio entre detalles del ticket */
    }
    .ticket-item {
        margin-bottom: 10px; /* Espacio entre elementos del ticket */
    }
    hr.separator {
        border: none;
        height: 1px;
        background-color: #ccc;
        margin: 12px 0; /* Espacio entre líneas divisorias */
